# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Set to True to use PostgreSQL, False to use SQLite
USE_POSTGRESQL=False

# PostgreSQL Settings (only needed if USE_POSTGRESQL=True)
DATABASE_NAME=movie_recommendation_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# TMDb API Configuration (REQUIRED)
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_BASE_URL=https://api.themoviedb.org/3

# Redis Configuration (optional - app will use in-memory cache if not set)
# Format: redis://[:password]@localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# JWT Token Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# CORS Settings (for frontend integration)
# Uncomment and modify if you have a frontend application
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Production Settings (for deployment)
# Uncomment these for production
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SECRET_KEY=use-a-very-secure-random-key
# USE_POSTGRESQL=True
